<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemEventos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@color/selecao"
    app:cardElevation="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@color/backgroudSecundario">

        <TextView
            android:id="@+id/tvItemEventosTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="Titulo do Evento"
            style="@style/selectInputStyle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemEventosData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="dd/MM/yyyy"
                style="@style/selectInputStyle" />
            <TextView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvItemEventosHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hh:mm"
                style="@style/selectInputStyle" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>