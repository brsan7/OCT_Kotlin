<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.brsan7.oct">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".application.OctApplication"
        android:icon="@drawable/logo_oct"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_oct"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar"
        tools:ignore="AllowBackup">
        <activity android:name=".CalendarioSolarActivity"/>
        <activity android:name=".RegistroLocalActivity" />
        <activity android:name=".LocaisActivity" />
        <activity android:name=".RegistroEventoActivity" />
        <activity android:name=".CalendarioEventoActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".service.NotificacaoBroadcastReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="NOTIFICATION_PROX_EVENTO" />
                <action android:name="STARTUP_EVENTOS_DO_DIA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
</application>

</manifest>